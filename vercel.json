{
  "version": 2,
  "builds": [
    {
      "src": "api/chat.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/history.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/chat",
      "dest": "/api/chat.py"
    },
    {
      "src": "/api/sessions/(.*)",
      "dest": "/api/history.py"
    },
    {
      "src": "/api/sessions",
      "dest": "/api/history.py"
    },
    {
      "src": "/api/upload",
      "dest": "/api/history.py"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}